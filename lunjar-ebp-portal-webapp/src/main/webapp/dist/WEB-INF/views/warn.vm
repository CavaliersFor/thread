##js获取登录信息
<script>
$(function(){
	var name = Core.CookieUtil.readCookie('account');
	var type = Core.CookieUtil.readCookie('type');
	var _type="(企业 )";
	if(type=="1"){
		_type="(个人)";
	}
	if(name!="" && name!=null){
		$(".ghost").hide();
		$(".user-email").html(name+_type);
		$(".user").show();
	}else{
		$(".user").hide();
		$(".ghost").show();
	}
});
</script>